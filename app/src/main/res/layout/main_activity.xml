<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector_main" >
    </Button>



    <Button
        android:id="@+id/btnInitialize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Initialize" />


    <Button
        android:id="@+id/btnMessageRandomSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message Random Send" />


    <Button
        android:id="@+id/btnDBCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="DB Create" />

    <Button
        android:id="@+id/btnDBRead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DB Read" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="@string/loading"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

</LinearLayout>