<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <lib.kingja.switchbutton.SwitchMultiButton
                android:id="@+id/toogleTargetGender"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:padding="4dp"
                app:disableColor="@color/white"
                app:selectedColor="@color/black"
                app:strokeRadius="0dp"
                app:strokeWidth="1dp"
                app:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <lib.kingja.switchbutton.SwitchMultiButton
                android:id="@+id/toogleTargetCountry"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:padding="4dp"
                app:disableColor="@color/white"
                app:selectedColor="@color/black"
                app:strokeRadius="0dp"
                app:strokeWidth="1dp"
                app:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/chat_message"
            style="@style/edittext_new"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="6dip"
            android:minHeight="@dimen/textbox_height" />
    </LinearLayout>

    <Button
        android:id="@+id/btnMessageRandomSend"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_selector_common"
        android:text="@string/send"
        android:textSize="20dp"
        android:textColor="@color/white"/>

</LinearLayout>