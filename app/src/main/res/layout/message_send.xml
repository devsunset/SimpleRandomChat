<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/install_header"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/install_header"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <lib.kingja.switchbutton.SwitchMultiButton
                android:id="@+id/toogleTargetGender"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:background="@color/light_gray"
                app:selectedColor="#ff0099cc"
                app:disableColor="@color/white"
                app:strokeWidth="0dp"
                app:strokeRadius="0dp"
                app:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/install_header"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <lib.kingja.switchbutton.SwitchMultiButton
                android:id="@+id/toogleTargetCountry"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:background="@color/light_gray"
                app:selectedColor="#ff0099cc"
                app:disableColor="@color/white"
                app:strokeWidth="0dp"
                app:strokeRadius="0dp"
                app:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/install_header"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/chat_message"
            style="@style/edittext_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:minHeight="@dimen/textbox_height" />
    </LinearLayout>

    <Button
        android:id="@+id/btnMessageRandomSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.github.angads25.toggle.widget.LabeledSwitch
            android:id="@+id/newMessageRecived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="14sp"
            app:colorBorder="@color/colorAccent"
            app:on="false" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/newmessagereceive"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

    </LinearLayout>


</LinearLayout>