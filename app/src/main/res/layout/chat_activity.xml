<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/baseColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <View
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnBlackListSend"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_selector_common"
            android:text="@string/black_list_send"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btnByeSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:text="@string/bye_send"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btnHide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:text="@string/hide"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:background="@color/content_bg"
        android:gravity="top"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/content_bg" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D2D2D2" />

    <LinearLayout
        android:id="@+id/replyArea"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F7F7F7"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btnAttach"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/icon_attach" />

        <EditText
            android:id="@+id/reply_message"
            style="@style/edittext_new"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dip"
            android:layout_marginTop="3dip"
            android:layout_marginRight="6dip"
            android:layout_marginBottom="3dip"
            android:layout_weight="1"
            android:hint="@string/send_input"
            android:minHeight="@dimen/textbox_height"
            android:padding="6dp" />

        <Button
            android:id="@+id/btnReplyMessageSend"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector_common"
            android:padding="6dp"
            android:text="@string/send"
            android:layout_marginRight="6dp"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>

</LinearLayout>