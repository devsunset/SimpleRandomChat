<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E6F8E0"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_marginLeft="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_back"/>

        <View
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnBlackListSend"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_selector_common"
            android:text="@string/black_list_send" />

        <Button
            android:id="@+id/btnByeSend"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_selector_common"
            android:text="@string/bye_send" />

        <Button
            android:id="@+id/btnHide"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/hide"
            android:background="@drawable/btn_selector_common"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:background="@color/content_bg"
        android:gravity="top"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/content_bg" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/replyArea"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/install_header"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btnAttach"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_attach"/>

        <EditText
            android:id="@+id/reply_message"
            style="@style/edittext_new"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:layout_weight="1"
            android:minHeight="20dp" />

        <Button
        android:id="@+id/btnReplyMessageSend"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector_common"
        android:text="@string/send" />

    </LinearLayout>


</LinearLayout>